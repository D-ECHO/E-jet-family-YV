<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
    
    <path>../../Models/Primus-Epic/primus_epic_mfd0.ac</path>
    
    <!-- Power on/off -->
    <animation>
        <name>Power on/off</name>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>
    
    <animation>
        <type>touch</type>
        <object-name>MFD1</object-name>
        <action>
            <touch>0</touch>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.touch(cmdarg().getValues());
                    }
                ]]></script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>knob</type>
        <object-name>MFD1_frame</object-name>
        <decrease>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(-1, 0);
                    }
                ]]></script>
            </binding>
        </decrease>
        <increase>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(1, 0);
                    }
                ]]></script>
            </binding>
        </increase>
        <shift-decrease>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(-1, 1);
                    }
                ]]></script>
            </binding>
        </shift-decrease>
        <shift-increase>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var mfd = canvas_mfd.mfd[1];
                    if (mfd != nil) {
                        mfd.scroll(1, 1);
                    }
                ]]></script>
            </binding>
        </shift-increase>
    </animation>
    
</PropertyList>
